<h1>Time tracking tool</h1>

<h3> <%= @my_project.name %></h3>

<ul> <% @my_entries.each do |t| %>
	<li> 
	<%=	"#{t.hours} h #{t.minutes} m #{t.date}" %>
		<%= link_to " Edit ", "/projects/#{@my_project.id}/time_entries/#{t.id}/edit" %>
		<%= link_to('Delete', project_time_entry_path(@my_project, t), method: :delete, data: {confirm: "Are you sure?"}) %>
	</li>
	<% end %>
</ul>

<%= link_to "Back to Projects", "/projects" %>
<%= link_to "new entry", "/projects/#{@my_project.id}/time_entries/new" %>

